alias: stoplight red weekday morning
trigger:
  platform: time
  after: '06:30'
condition:
  condition: and
  conditions:
    - condition: state
      entity_id: input_boolean.allow_stoplight_automation
      state: 'on'
    - condition: time
      weekday:
        - mon
        - tue
        - wed
        - thu
        - fri
action:
  service: input_select.select_option
  data_template:
    entity_id: input_select.playroom_stoplight
    option: 'Red'