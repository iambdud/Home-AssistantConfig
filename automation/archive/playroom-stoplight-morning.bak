- alias: stoplight on at 6am
  trigger:
    platform: time
    after: '06:00'
  condition:
    condition: state
    entity_id: input_boolean.allow_stoplight_automation
    state: 'on'
  action:
    service: input_select.select_option
    data_template:
      entity_id: input_select.playroom_stoplight
      #option: 'Red'
      #option: "{{ 'Green' if now().strftime('%a') == 'Sat' or now().strftime('%a') == 'Sun' else 'Red' }}"
      #set to green if the next day is a weekend or a holiday
      option: >
        {% set day = now().strftime('%a') %}
        {% set daymonth = now().strftime("%m%d")|int %}
        {%- if day == 'Sat' or day == 'Sun' -%}
          Green
        {%- elif daymonth == 102
        or daymonth == 414
        or daymonth == 529
        or daymonth == 612
        or daymonth == 704
        or daymonth == 904
        or daymonth == 1122
        or daymonth == 1123
        or daymonth == 1124
        or daymonth == 1225
        or daymonth == 1226
        or daymonth == 1227
        or daymonth == 1228
        or daymonth == 1229
        -%}
          Green
        {%- else -%}
          Red
        {%- endif -%}

  # http://www.calendar-365.com/holidays/2017.html
